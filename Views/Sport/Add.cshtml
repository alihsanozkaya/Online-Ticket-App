@model Sport

<form method="post" enctype="multipart/form-data">
    <input asp-for="PhotoUrl" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-5">
                <div class="row pb-3">
                    <h2 class="text-primary">Maç Ekle</h2>
                    <hr />
                </div>
                <div class="mb-1">
                    <label asp-for="MatchName"></label>
                    <input class="form-control" asp-for="MatchName" />
                    <span class="text-danger" asp-validation-for="MatchName"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Description"></label>
                    <input class="form-control" asp-for="Description" />
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Price"></label>
                    <input class="form-control" asp-for="Price" />
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Area"></label>
                    <input class="form-control" asp-for="Area" />
                    <span class="text-danger" asp-validation-for="Area"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="City"></label>
                    <input class="form-control" asp-for="City" />
                    <span class="text-danger" asp-validation-for="City"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="Date"></label>
                    <input class="form-control" asp-for="Date" type="datetime" />
                    <span class="text-danger" asp-validation-for="Date"></span>
                </div>
                <div class="mb-1">
                    <label asp-for="PhotoUrl"></label>
                    <input type="file" name="file" class="form-control" />
                </div>
                <button class="btn btn-success btn-lg mt-2" type="submit" style="border-radius: 10px">Ekle</button>

                <a class="btn btn-primary btn-lg mt-2" asp-controller="Sport" asp-action="Index" style="border-radius: 10px">Geri Dön</a>
            </div>
        </div>
    </div>
</form>