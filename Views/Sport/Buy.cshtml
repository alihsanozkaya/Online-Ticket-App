@model Sport

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6">
            <section>
                <form method="post" enctype="multipart/form-data">
                    <h4 class="text-center">Satın Alma Ekranı</h4>
                    <div class="form-floating mb-3">
                        <div class="mb-3">
                            <label for="personCount" class="form-label">Kişi sayısı</label>
                            <select class="form-select" id="personCount" name="personCount">
                                @for (int i = 1; i < 10; i++)
                                {
                                    <option value="@i">@i</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="form-floating mb-3">
                        <div class="mb-3">
                            <label for="category" class="form-label">Kategori</label>
                            <select class="form-select" id="category" name="category">
                                @for (int i = 1; i <= 6; i++)
                                {
                                    <option value="@i">@i. Kategori</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button class="btn btn-success btn-lg mt-2" type="submit" style="border-radius: 10px; display:block;">Satın Al</button>
                    </div>
                    <a class="btn btn-info mt-1" asp-controller="Sport" asp-action="Index" style="display:block">Geri Dön</a>
                </form>
            </section>
        </div>
    </div>
</div>
